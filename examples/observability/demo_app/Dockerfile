FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

COPY pyproject.toml README.md /app/
COPY src /app/src

RUN pip install --no-cache-dir ".[observability]"

COPY examples/observability/demo_app /app/examples/observability/demo_app

EXPOSE 9464

CMD ["python", "examples/observability/demo_app/app.py"]
